
@{
    ViewBag.Title = "Index";
}

<div class="row" style="margin-top:50px;">
    <div class="col-md-6">
        <form action="/Home/Index" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Image">Image</label>
                <input type="file" class="form-control" name="Image" id="fileUpload" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary "><i class="glyphicon glyphicon-upload"></i> Yükle</button>
            </div>

            <label>Kişi Sayısı:</label>
            <input type="text" class="form-control" disabled value="@ViewData["kisisayisi"]" />

        </form>
    </div>
</div>






@{  WebImage photo = null;

    var imagePath = "";

    if (IsPost)
    {
        photo = WebImage.GetImageFromRequest();
        if (photo != null)
        {
            Path.GetFileName(photo.FileName);
            imagePath = @"C:\\P\\" + photo.FileName;

            //photo.Save(@"~\" + imagePath);
        }
    }
}


@if (imagePath != "")
{
    <div class="result">
        <img src="@Url.Content(imagePath)" alt="image" />

    </div>
}


