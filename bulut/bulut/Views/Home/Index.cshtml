
@{
    ViewBag.Title = "Index";
    string dosyayolu = TempData["dosyayolu"] as string;
}
    <style>
 

     body {
            background-color:skyblue;
            background-repeat: no-repeat;
            background-attachment: fixed;

            font-family: Verdana, monospace, sans-serif;
            font-size: 12px;
            font-weight: bold;
            text-align: justify;
            min-height: 800px;
        }
     div.arkaresim{
          width: 600px;
          height: 300px;
          padding: 20px;
          background-color: skyblue;
          position: relative;
          margin: auto;
     }

    </style>
   
    

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="arkaresim">
        
        <div class="row" style="margin-top:50px;">
            <div class="col-md-6">
               
                    <div class="form-group">
                        <label for="Image">Resim Seçiniz:</label>
                        <input type="file" class="form-control" name="Imagee" id="fileUpload" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary "><i class="glyphicon glyphicon-upload"></i> Yükle</button>
                    </div>

                    <label>Kişi Sayısı:</label>
                    <input type="text" class="form-control" disabled value="@ViewData["kisisayisi"]" />

            </div>
            <div class="result">
                <img src="~/Image/@dosyayolu" width="200" height="180" alt="image" />

            </div>
        </div>
    </div>
}





 

         


        


